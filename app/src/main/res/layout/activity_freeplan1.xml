<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/cp_type"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@mipmap/login_login_bg"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <Spinner
            android:id="@+id/plan"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@mipmap/login_login_bg"></Spinner>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_currenJounal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="当前期数：" />

    <TextView
        android:id="@+id/tv_currenNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="当前号码：" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/iv_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前预测:" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/iv_forecast_jounal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预测期号:" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/iv_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前计划:" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>