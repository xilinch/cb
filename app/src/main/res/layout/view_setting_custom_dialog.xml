<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="160dp"
    android:background="@drawable/dd_shape_ffffffff_stroke_ffffffff_content_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_custom_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.1"
        android:text="确定要退出登录吗？"
        android:textColor="@color/c_gray_333333"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="暂不"
            android:textColor="@color/c_gray_999999"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/blue_3e9deb"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>
