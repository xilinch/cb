<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 圆形imageview -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomRoundImageView">
        <attr name="topCornerRadius" format="dimension" />
        <attr name="bottomCornerRadius" format="dimension" />
    </declare-styleable>

    <!-- 下拉刷新控件 -->
    <declare-styleable name="RefreshLayout">
        <attr name="autorefresh" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PtrClassicHeader"><attr format="integer" name="ptr_rotate_ani_time"/></declare-styleable>
    <declare-styleable name="PtrFrameLayout"><attr format="reference" name="ptr_header"/><attr format="reference" name="ptr_content"/><attr format="float" name="ptr_resistance"/><attr format="float" name="ptr_ratio_of_header_height_to_refresh"/><attr format="integer" name="ptr_duration_to_close"/><attr format="integer" name="ptr_duration_to_close_header"/><attr format="boolean" name="ptr_pull_to_fresh"/><attr format="boolean" name="ptr_keep_header_when_refresh"/></declare-styleable>

</resources>