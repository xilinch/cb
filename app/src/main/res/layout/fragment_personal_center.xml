<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="6dp"
    android:scrollbarThumbVertical="@drawable/shape_scroll_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/dd_shape_green_content_8">

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp">

                <com.shishic.cb.view.CircleImageView
                    android:id="@+id/civ_personal_center_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/avatar_default"
                    app:border_color="@color/c_gray_dddddd"
                    app:border_width="1px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_personal_center_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingTop="10dp"
                        android:text="点击登录"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_personal_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="金币"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_modify_pwd"
            style="@style/personal_center_item"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                style="@style/personal_center_title"
                android:text="修改密码" />

            <ImageView
                android:id="@+id/iv_south_daily"
                style="@style/personal_center_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bindphone"
            style="@style/personal_center_item"
            android:visibility="gone">

            <TextView
                style="@style/personal_center_title"
                android:text="绑定手机" />

            <ImageView
                android:id="@+id/iv_south_magazie"
                style="@style/personal_center_arrow" />

            <ImageView
                style="@style/personal_center_nfTag"
                android:layout_toLeftOf="@id/iv_south_magazie"
                android:src="@mipmap/my_nfzz_icon" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/c_gray_cccccc" />

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_sign"
                android:text="签到" />
            <TextView
                android:id="@+id/tv_messge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_message"
                android:text="我的消息" />

            <TextView
                android:id="@+id/tv_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_notify"
                android:text="我的通知" />
        </LinearLayout>


        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/c_gray_cccccc" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_message"
            style="@style/personal_center_item">

            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/me_ico_message" />

            <TextView
                style="@style/personal_center_title"
                android:layout_toRightOf="@+id/iv_msg"
                android:text="系统消息" />

            <ImageView
                android:id="@+id/iv_message"
                style="@style/personal_center_arrow" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_share"
            style="@style/personal_center_item"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                style="@style/personal_center_title"
                android:text="分享应用" />

            <ImageView style="@style/personal_center_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/c_gray_cccccc" />

        <RelativeLayout
            android:id="@+id/rl_kefu"
            style="@style/personal_center_item"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_contact"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/icon_kefu"
                style="@style/personal_center_title"
                android:text="客服微信 7978019" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/c_gray_cccccc" />
        <RelativeLayout
            android:id="@+id/rl_feedback"
            style="@style/personal_center_item">

            <ImageView
                android:id="@+id/iv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/me_ico_yijian" />

            <TextView
                style="@style/personal_center_title"
                android:layout_toRightOf="@+id/iv_feedback"
                android:text="意见反馈" />

            <ImageView style="@style/personal_center_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/c_gray_cccccc" />

        <RelativeLayout
            android:id="@+id/rl_cache"
            style="@style/personal_center_item">

            <ImageView
                android:id="@+id/iv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/me_ico_touzhu" />

            <TextView
                style="@style/personal_center_title"
                android:layout_toRightOf="@+id/iv_cache"
                android:text="清除缓存" />


        </RelativeLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/c_gray_cccccc" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_notify"
            style="@style/personal_center_item">

            <ImageView
                android:id="@+id/iv_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/me_ico_mine" />

            <TextView
                style="@style/personal_center_title"
                android:layout_toRightOf="@+id/iv_notify"
                android:text="我的通知" />

            <ImageView
                android:id="@+id/iv_notify1"
                style="@style/personal_center_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/c_gray_cccccc" />

        <RelativeLayout
            android:id="@+id/rl_online_service"
            style="@style/personal_center_item"
            android:visibility="gone">

            <TextView
                style="@style/personal_center_title"
                android:text="在线客服" />

            <ImageView style="@style/personal_center_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_logon_text"
                style="@style/personal_center_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/dd_shape_rec_red_44"
                android:gravity="center"
                android:text="立即登录"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
