<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_gray_f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:background="@drawable/dd_shape_ffffff_stroke_f2f2f2_content_5"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_kaijinggonggao"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="开奖公告"
            android:textColor="@color/c_gray_333333"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_1"
            android:id="@+id/tv_1_1"
            android:text="最新开奖信息"
            android:textSize="14sp"
            android:textColor="@color/c_gray_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:background="@drawable/dd_shape_ffffff_stroke_f2f2f2_content_5"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_zoushitu"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="走势图"
            android:textColor="@color/c_gray_333333"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_2"
            android:id="@+id/tv_2_1"
            android:text="分析号码走势"
            android:textSize="14sp"
            android:textColor="@color/c_gray_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:background="@drawable/dd_shape_ffffff_stroke_f2f2f2_content_5"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_beitougongju"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="倍投计算"
            android:textColor="@color/c_gray_333333"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_3"
            android:id="@+id/tv_3_1"
            android:text="投注计算器"
            android:textSize="14sp"
            android:textColor="@color/c_gray_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:background="@drawable/dd_shape_ffffff_stroke_f2f2f2_content_5"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_lengretongji"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="冷热统计"
            android:textColor="@color/c_gray_333333"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_4"
            android:id="@+id/tv_4_1"
            android:text="统计开奖号码热度"
            android:textSize="14sp"
            android:textColor="@color/c_gray_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:background="@drawable/dd_shape_ffffff_stroke_f2f2f2_content_5"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_haomaguolv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="号码过滤"
            android:textColor="@color/c_gray_333333"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_5"
            android:id="@+id/tv_5_1"
            android:text="过滤不需要号码"
            android:textSize="14sp"
            android:textColor="@color/c_gray_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>