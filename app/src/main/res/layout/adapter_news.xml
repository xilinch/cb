<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_1_yilou" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_toLeftOf="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="标题"
            android:layout_marginRight="10dp"
            android:textColor="@color/c_gray_333333"
            android:textSize="16sp" />
        <TextView
            android:layout_toLeftOf="@+id/iv_icon"
            android:layout_below="@+id/tv_title"
            android:id="@+id/tv_des"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="摘要"
            android:textColor="@color/c_gray_999999"
            android:textSize="15sp" />
        <TextView
            android:layout_toLeftOf="@+id/iv_icon"
            android:layout_below="@+id/tv_des"
            android:id="@+id/tv_time"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="时间"
            android:textColor="@color/c_gray_BBBBBB"
            android:textSize="13sp" />
    </RelativeLayout>
    <View
        android:background="@color/c_gray_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>
</LinearLayout>