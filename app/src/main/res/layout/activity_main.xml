<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/c_gray_eeeeee" />
    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <RadioButton
            android:checked="true"
            android:drawableTop="@drawable/dd_home_tab1"
            android:id="@+id/rb1"
            style="@style/bottom_btn_style"
            android:text="首页" />
        <RadioButton
            android:id="@+id/rb2"
            android:drawableTop="@drawable/dd_home_tab2"
            style="@style/bottom_btn_style"
            android:text="免费计划" />
        <RadioButton
            android:id="@+id/rb3"
            android:drawableTop="@drawable/dd_home_tab3"
            style="@style/bottom_btn_style"
            android:text="工具" />
        <RadioButton
            android:id="@+id/rb4"
            android:drawableTop="@drawable/dd_home_tab4"
            style="@style/bottom_btn_style"
            android:text="专家计划" />
        <RadioButton
            android:id="@+id/rb5"
            style="@style/bottom_btn_style"
            android:drawableTop="@drawable/dd_home_tab5"
            android:text="我的" />

    </RadioGroup>
</LinearLayout>