<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:background="@drawable/dd_shape_ffffffff_stroke_ffffffff_content_5"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/c_gray_333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:gravity="left"
            android:lineSpacingMultiplier="1.1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="需要与客服进行会话请添加微信号wx225888,或者加qq群685455，或者加qq客服357845789，谢谢。"
            android:textColor="@color/c_gray_666666"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@+id/tv_confirm"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="以后再说"
                android:textColor="@color/c_gray_999999"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="好的"
                android:textColor="@color/blue_389BEE"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/permission_top" />
</FrameLayout>
