            android:background="@color/red"
            android:id="@+id/btn_confirm"
            android:layout_width="80dp"
            android:layout_height="30dp" />
        <Button
            android:layout_marginLeft="20dp"
            android:text="复制"
            android:textColor="@color/white"
            android:background="@color/red"
            android:id="@+id/btn_copy"
            android:layout_width="80dp"
            android:layout_height="30dp" />
